<Window x:Class="SeaBattleGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeaBattleGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="512" Width="390"
        x:Name="Window">
    <Grid HorizontalAlignment="Center" Width="390" Height="502" VerticalAlignment="Top">
        <StackPanel x:Name="MainPanel" Margin="0,0,0,107" Height="395" VerticalAlignment="Bottom"/>
        <Button x:Name="StartButton" Content="Button" Margin="212,422,0,0" Click="Button_Click" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="150"/>
        <TextBox Margin="0,422,212,0" TextWrapping="Wrap" Text="{Binding TargetSize}" HorizontalAlignment="Right" Width="150" Height="30" VerticalAlignment="Top"/>

    </Grid>
</Window>
